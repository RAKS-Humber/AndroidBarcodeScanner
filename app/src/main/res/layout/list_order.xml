<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_order_name_text_view"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="@string/product_name">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_order_price_text_view"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="@string/product_price">
        </TextView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_order_barcode_text_view"
            android:textStyle="bold"
            android:padding="4dp"
            tools:text="@string/product_barcode">
        </TextView>

        <TextView
            android:id="@+id/list_order_quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barcode" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>